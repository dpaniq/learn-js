<h2>Todos Page</h2>

{{#if todosLean.length}}


<ul>
    {{#each todosLean}}
        <li class='todo'>
            <form action='/complete' method="POST">
                <label>
                    {{#if completed}}
                        <input type="checkbox" checked name="completed">
                        <span class="completed">{{_id}} | {{title}}</span>

                    {{else}}
                        <input type="checkbox" name="completed">
                        <span>   {{title}}   </span>
                    {{/if}}

                    <input type="hidden" name="id" value="{{_id}}">

                    <button class="btn btn-small" type="submit">Save</button>
                </label>
            </form>
        </li>
    {{/each}}
</ul>

{{else}}
    <p>No todos collection from mongodb!</p>
{{/if}}